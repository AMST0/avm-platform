generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shop {
  id           String   @id @default(uuid())
  name         String
  slug         String   @unique
  category     String
  floor        Int
  logo         String
  phone        String?
  website      String?
  featured     Boolean  @default(false)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  workingHours String?
}

model Event {
  id        String   @id @default(uuid())
  titleTr   String
  titleEn   String
  titleRu   String
  titleAr   String
  slug      String   @unique
  descTr    String
  descEn    String
  descRu    String
  descAr    String
  image     String
  startDate DateTime
  endDate   DateTime
  location  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Slider {
  id          String   @id @default(uuid())
  slug        String   @unique
  titleTr     String
  titleEn     String
  titleRu     String
  titleAr     String
  subtitleTr  String?
  subtitleEn  String?
  subtitleRu  String?
  subtitleAr  String?
  image       String
  mobileImage String?
  link        String?
  order       Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Popup {
  id        String   @id @default(uuid())
  titleTr   String
  titleEn   String
  titleRu   String
  titleAr   String
  image     String
  link      String?
  frequency String   @default("once")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Inquiry {
  id        String   @id @default(uuid())
  type      String
  name      String
  email     String
  phone     String
  message   String?
  details   Json?
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
